{
  "name": "sws2apps-api",
  "version": "3.41.1",
  "description": "Node apps to handle backend operations for all sws2apps services",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon src/index.ts",
    "build": "rm -rf dist && tsc && cp -r src/locales dist/locales",
    "start": "node dist/index.js",
    "test": "npm run test:unit && npm run test:e2e",
    "test:unit": "vitest run --exclude tests/e2e/**",
    "test:e2e": "vitest run tests/e2e/**",
    "test:watch": "vitest",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "minio:start": "docker compose up -d && tsx src/scripts/empty-bucket.ts",
    "minio:stop": "docker compose down",
    "firebase:start": "firebase emulators:start --project organized-local"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "type": "module",
  "engines": {
    "node": "24.x",
    "npm": ">=11"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.975.0",
    "@aws-sdk/s3-request-presigner": "^3.975.0",
