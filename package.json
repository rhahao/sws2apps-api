    "cross-env": "^10.1.0",
    "crypto-es": "^3.1.2",
    "cryptr": "^6.4.0",
    "dayjs": "^1.11.19",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "express-rate-limit": "^8.2.1",
    "express-validator": "^7.3.1",
    "firebase-admin": "^13.6.0",
    "geoip-lite": "^1.4.10",
    "helmet": "^8.1.0",
    "i18next": "^25.8.0",
    "i18next-fs-backend": "^2.6.1",
    "i18next-http-middleware": "^3.9.2",
    "is-online": "^12.0.2",
    "multer": "^2.0.2",
    "multer-s3": "^3.0.1",
    "node-fetch": "^3.3.2",
