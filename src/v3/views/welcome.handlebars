<html lang='en'>

<head>
	<meta charset='UTF-8' />
	<meta name='viewport' content='width=device-width, initial-scale=1.0' />
	<title>Document</title>

	<style>
		body {
			color: black;
		}

		h2 {
			margin: 0;
			padding: 0;
			font-weight: 550;
			font-size: 20px;
		}

		h3 {
			margin: 0;
			padding: 0;
			font-weight: 570;
			font-size: 18px;
		}

		h4,
		.h4 {
			margin: 0;
			padding: 0;
			font-weight: 550;
			font-size: 16px;
		}

		p {
			margin: 0;
			padding: 0;
			font-weight: 420;
			font-size: 16px;
		}

		a {
			margin: 0;
			padding: 0;
			font-weight: 520;
			font-size: 14px;
			color: #3b4ca3;
			text-decoration: none;
		}

		.mail-content {
			background-color: #fefefe;
			border: 1px solid #dadada;
			max-width: 600px;
			width: 100%;
			margin: 0 auto;
			border-radius: 12px;
			color: inherit;
		}

		.branding {
			padding: 24px 32px 32px 32px;
		}

		.logo {
			width: 40px;
			height: 40px;
		}

		.welcome-title {
			padding: 0px 32px 8px 32px;
		}

		.welcome-desc {
			padding: 0px 32px 24px 32px;
			color: #505050;
		}

		.video-container {
			padding: 0 32px;
			display: flex;
			flex-direction: column;
			gap: 12px;
			align-items: center;
			justify-content: center;
		}

		.video-thumbnail {
			max-height: 215px;
			height: max-content;
			width: fit-content;
		}

		.info-container {
			padding: 24px 32px;
			padding-top: 24px;
			padding-bottom: 32px;
			display: flex;
			flex-direction: column;
			gap: 12px;
		}

		.info-row {
			display: flex;
			align-items: center;
			gap: 8px;
		}

		.footer-container {
			padding: 24px 32px;
			background-color: #f5f5f5;
			height: 24px;
			display: flex;
			align-items: center;
			justify-content: space-between;
			gap: 24px;
		}

		.copyright {
			color: #505050;
		}

		.footer-icons {
			display: flex;
			align-items: center;
			gap: 12px;
		}
	</style>
</head>

<body>
	<div class='mail-content'>
		<table style="width:100%">
			<tr>
				<th style="width: 100%" />
			</tr>
			<tr style="padding: 24px 32px 32px 32px;">
				<td>
					<div class="branding">
						<table>
							<tr>
								<td>
									<img class="logo" alt="logo"
